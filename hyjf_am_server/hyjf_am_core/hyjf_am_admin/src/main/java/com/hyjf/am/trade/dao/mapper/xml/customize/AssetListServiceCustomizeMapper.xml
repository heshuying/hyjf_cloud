	</resultMap>
	<select id="selectAssetDetail" resultMap="selectAssetDetailMap" parameterType="Map">
		SELECT
			CONCAT(substr(hpa.truename, 1, 1),'**') truename,
			hpa.sex,
			hpa.age,
			hpa.marriage,
			hpa.work_city,
			hpa.position,
			CONCAT(substr(hpa.idcard, 1, 4),'************') idcard,
			hpa.domicile,
			hpa.credit_level,
			hpa.useage,
			hpa.monthly_income,
			hpa.first_payment,
			hpa.second_payment,
			hpa.cost_introdution,
			hpa.overdue_times,
			FORMAT(hpa.overdue_amount, 2) overdue_amount,
			hpa.litigation,
			hpa.credit_level
		FROM ht_hjh_plan_asset hpa 
		<include refid="Where_Clause" />
	</select>
	
