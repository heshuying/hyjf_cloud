<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hyjf.am.config.dao.mapper.customize.HelpCustomizeMapper">

	<resultMap id="HelpMap" type="com.hyjf.am.config.dao.model.customize.HelpCategoryCustomize">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="title" property="title" jdbcType="VARCHAR" />
		<result column="pid" property="pid" jdbcType="INTEGER" />
		<result column="code" property="code" jdbcType="VARCHAR" />
		<result column="group" property="group" jdbcType="VARCHAR" />
		<result column="sort" property="sort" jdbcType="INTEGER" />
		<result column="hide" property="hide" jdbcType="INTEGER" />
		<result column="tip" property="tip" jdbcType="VARCHAR" />
		<result column="level" property="level" jdbcType="INTEGER" />
	</resultMap>
	<select id="selectCategory" parameterType="java.lang.String"  resultMap="HelpMap" resultType="com.hyjf.am.config.dao.model.customize.HelpCategoryCustomize">
 select c.id,c.title,c.pid,c.code,c.group,c.sort,c.hide,c.tip,c.level from ht_category c
  where c.hide=0 and
  c.pid=(select a.id from ht_category a
  		where a.hide=0 and a.group=#{value} and a.pid=0 limit 1) order by c.sort asc
	</select>
	<select id="selectSunCategory" parameterType="java.lang.String"  resultMap="HelpMap" resultType="com.hyjf.am.config.dao.model.customize.HelpCategoryCustomize">
		select c.id,c.title,c.pid,c.code,c.group,c.sort,c.hide,c.tip,c.level from ht_category  c
  		where c.hide=0 and  c.pid=#{value} order by c.sort asc
	</select>

	<resultMap id="HelpContentMap" type="com.hyjf.am.config.dao.model.customize.HelpContentCustomize">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="title" property="title" jdbcType="VARCHAR" />
		<result column="pcate_id" property="pcate_id" jdbcType="INTEGER" />
		<result column="cate_id" property="cate_id" jdbcType="INTEGER" />
		<result column="content" property="content" jdbcType="VARCHAR" />
		<result column="order" property="order" jdbcType="INTEGER" />
		<result column="status" property="status" jdbcType="INTEGER" />
		<result column="type" property="type" jdbcType="INTEGER" />
		<result column="create_time" property="create_time" jdbcType="INTEGER" />
		<result column="update_time" property="update_time" jdbcType="INTEGER" />
		<result column="source" property="source" jdbcType="VARCHAR" />
		<result column="code" property="code" jdbcType="VARCHAR" />
		<result column="author" property="author" jdbcType="VARCHAR" />
		<result column="thumb" property="thumb" jdbcType="VARCHAR" />
		<result column="summary" property="summary" jdbcType="VARCHAR" />
		<result column="seo_title" property="seo_title" jdbcType="VARCHAR" />
		<result column="seo_keyword" property="seo_keyword" jdbcType="VARCHAR" />
		<result column="seo_description" property="seo_description" jdbcType="VARCHAR" />
		<result column="hits" property="hits" jdbcType="INTEGER" />
		<result column="out_link" property="out_link" jdbcType="VARCHAR" />
	</resultMap>
	<select id="selectSunContentCategory" parameterType="java.util.HashMap"  resultMap="HelpContentMap" resultType="com.hyjf.am.config.dao.model.customize.HelpContentCustomize">
		select c.id,c.pcate_id,c.cate_id,c.title,c.content,c.order,c.status,
				c.type,c.code,c.create_time,c.update_time,c.source,c.author,c.thumb,c.summary,
				c.seo_title,c.seo_keyword,c.seo_description,c.hits,c.out_link from (
					(select
				a.id,a.pcate_id,a.cate_id,a.title,a.content,a.order,a.status,
				a.type,a.code,a.create_time,a.update_time,a.source,a.author,a.thumb,a.summary,
				a.seo_title,a.seo_keyword,a.seo_description,a.hits,a.out_link
				from ht_content_help a
  		where a.status=1 and  a.cate_id=0 and a.pcate_id=#{pid} )
		union all (select
				b.id,b.pcate_id,b.cate_id,b.title,b.content,b.order,b.status,
				b.type,b.code,b.create_time,b.update_time,b.source,b.author,b.thumb,b.summary,
				b.seo_title,b.seo_keyword,b.seo_description,b.hits,b.out_link
				 from ht_content_help b
  		where status=1 and  cate_id=#{type} )) c order by c.order asc
	</select>

	<select id="selectByExampleWithBLOBsAlone" resultMap="ResultMapWithBLOBsAlone" parameterType="com.hyjf.am.config.dao.model.auto.ContentArticleExample" >
		select
		<if test="distinct" >
			distinct
		</if>
		id, title
		from ht_content_article
		<if test="_parameter != null" >
			<include refid="Example_Where_ClauseAlone" />
		</if>
		<if test="orderByClause != null" >
			order by ${orderByClause}
		</if>
		<if test="limitStart >= 0" >
			limit #{limitStart} , #{limitEnd}
		</if>
	</select>
	<sql id="Example_Where_ClauseAlone" >
		<where >
			<foreach collection="oredCriteria" item="criteria" separator="or" >
				<if test="criteria.valid" >
					<trim prefix="(" suffix=")" prefixOverrides="and" >
						<foreach collection="criteria.criteria" item="criterion" >
							<choose >
								<when test="criterion.noValue" >
									and ${criterion.condition}
								</when>
								<when test="criterion.singleValue" >
									and ${criterion.condition} #{criterion.value}
								</when>
								<when test="criterion.betweenValue" >
									and ${criterion.condition} #{criterion.value} and #{criterion.secondValue}
								</when>
								<when test="criterion.listValue" >
									and ${criterion.condition}
									<foreach collection="criterion.value" item="listItem" open="(" close=")" separator="," >
										#{listItem}
									</foreach>
								</when>
							</choose>
						</foreach>
					</trim>
				</if>
			</foreach>
		</where>
	</sql>
	<resultMap id="ResultMapWithBLOBsAlone" type="com.hyjf.am.config.dao.model.auto.ContentArticle"  >
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="title" property="title" jdbcType="VARCHAR" />
	</resultMap>

	<select id="selectCategoryPid" resultType="java.lang.Integer">
		select a.id from ht_category a
		where a.hide=0 and a.group='help' and a.pid=0 limit 1
	</select>
</mapper>